<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.srikanth.glasscaptionsviz">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-feature android:name="android.hardware.microphone" android:required="true" />

    <application
        android:allowBackup="false"
        android:label="Glass Captions Viz"
        android:icon="@android:drawable/presence_audio_online"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Captions + Viz"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="com.google.android.glass.category.DIRECTORY"/>
            </intent-filter>

        </activity>
    </application>
</manifest>
